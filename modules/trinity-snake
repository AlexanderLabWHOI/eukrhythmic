configfile: "config.yaml"

OUTPUTDIR = config['outputDIR']

import io
import os
from snakemake.exceptions import print_exception, WorkflowError

rule trinity:
	input:
		left = os.path.join(OUTPUTDIR, "firsttrim", "{sample}_1.trimmed.fastq.gz"),
		right = os.path.join(OUTPUTDIR, "firsttrim", "{sample}_2.trimmed.fastq.gz")
	output:	
		os.path.join(OUTPUTDIR, "trinity_results", "{sample}_Trinity.fasta")
	log:
		"logs/trinity/outputlog_{sample}_trinity.log"
	params:
		extra = ""
	threads: 4
	wrapper:	
		"0.36.0/bio/trinity"


