configfile: "config.yaml"

OUTPUTDIR = config["outputDIR"]
SCRATCHDIR = config["scratch"]
INPUTDIR = config["inputDIR"]

import io
import os
import pathlib
from snakemake.exceptions import print_exception, WorkflowError

rule fastqc_trimmed:
	input:
		os.path.join(OUTPUTDIR, "firsttrim", "{sample}_{num}.trimmed.fastq.gz")
	output:
		html = os.path.join(OUTPUTDIR, "qc", "fastqc_trimmed", "{sample}_{num}.trimmed.html"),
		zip = os.path.join(OUTPUTDIR, "qc", "fastqc_trimmed", "{sample}_{num}.trimmed.zip")
	params: ""
	log: 
		"logs/fastqc/{sample}_{num}.trimmed.log"
	wrapper:
		"0.36.0/bio/fastqc"
