configfile: "config.yaml"

OUTPUTDIR = config["outputDIR"]
SCRATCHDIR = config["scratch"]
INPUTDIR = config["inputDIR"]

import io
import os
import pathlib
from snakemake.exceptions import print_exception, WorkflowError

rule fastqc:
	input:
		INPUTDIR + "{sample}.trimmed.fastq"
	output:
		html = OUTPUTDIR + "/qc/fastqc/{sample}.trimmed.html",
		zip = OUTPUTDIR + "/qc/fastqc/{sample}.trimmed.zip"
	params: ""
	log: 
		"logs/fastqc/{sample}.trimmed.log"
	wrapper:
		"0.36.0/bio/fastqc"
